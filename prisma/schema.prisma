generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String     @unique
  emailVerified DateTime?
  image         String?
  experience Int @default(0)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  tutorialDone Boolean @default(false)
  accounts      Account[]
  sessions      Session[]

  userClub      UserClub[]
  UserHostess UserHostess[]

  ChatMessage ChatMessage[]
  ChatMember ChatMember[]

  GameAction GameAction[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Club {
  id          String     @id @default(cuid())
  name        String
  description String
  hostId      String
  exterior    String
  logo        String     @default("/images/dragon2.png")
  host        Host       @relation(fields: [hostId], references: [id])
  userClub    UserClub[]
}

model UserClub {
  id              String            @id @default(cuid())
  userId          String
  clubId          String
  money           Int               @default(100000)
  popularity      Int               @default(100)
  supplies Int @default(100)
  club            Club              @relation(fields: [clubId], references: [id], onDelete: Cascade)
  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, clubId], name: "userId_clubId")
  Effect Effect[]
  Loan Loan[]
}

model Host {
  id      String  @id @default(cuid())
  name    String
  surname String?
  image   String
  Club    Club[]
}

model Hostess {
  id              String            @id @default(cuid())
  name            String
  surname         String?
  image           String
  attractiveness  Int               @default(1)
  cover           String
  bio             String            @default("Nothing is actually known about this hostess...")

  UserHostess UserHostess[]
}

model UserHostess{
  id              String            @id @default(cuid())
  userId String
  hostessId String
  fatigue Int @default(0)

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  hostess    Hostess  @relation(fields: [hostessId], references: [id], onDelete: Cascade)

  @@unique([userId, hostessId])
}

model Activity {
  id             String    @id @default(cuid())
  name           String
  popularityGain Int       @default(100)
  cost           Float     @default(10000)
  media          String
  performerId    String
  performer      Performer @relation(fields: [performerId], references: [id])
}

model Performer {
  id       String     @id @default(cuid())
  name     String
  surname  String?
  image    String
  cover    String
  bio      String     @default("Nothing is really known about this performer...")
  Activity Activity[]
}

model Jam {
  id    String @id @default(cuid())
  title String
  media String
}

model Buffet {
  id          String     @id @default(cuid())
  name        String     @default("Nothing to see here")
  price       Int        @default(5000)
  description String     @default("Nothing is really known about this type of... uh... thing? I guess...")
  type        BuffetType
  icon String @default("UtensilsCrossed")
}

model Loan {
  id          String     @id @default(cuid())
  userClubId String
  amount Int
  interest Float @default(1.2)
  createdAt DateTime
  dueAt DateTime
  paid Boolean
  paidAt DateTime?

  userClub UserClub @relation(fields: [userClubId], references: [id], onDelete: Cascade)
}

model Effect {
  id          String     @id @default(cuid())
  userClubId String
  type EffectType
  createdAt DateTime @default(now())
  expiresAt DateTime
  active Boolean @default(true)

  userClub UserClub @relation(fields: [userClubId], references: [id], onDelete: Cascade)
}

model ChatRoom {
  id        String   @id @default(cuid())
  name      String?
  createdAt DateTime @default(now())

  chatMessages  ChatMessage[]
  members   ChatMember[]
}

model ChatMember {
  id        String   @id @default(cuid())
  userId    String
  roomId    String
  joinedAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  room ChatRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@unique([userId, roomId])
}

model ChatMessage {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  username String
  userImage String?
  userId String
  roomId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  room ChatRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
}

model GameAction {
  id        String   @id @default(cuid())
  userId    String
  type      ActionType
  status    ActionStatus
  startedAt DateTime @default(now())
  endsAt    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model GameRound {
  id            String   @id @default(cuid())
  userId        String
  gameType      GameType
  status        RoundStatus
  winningNumber Int?
  totalBet      Int
  payout        Int?
  createdAt     DateTime @default(now())
  resolvedAt    DateTime?

  bets          Bet[]
}

model Bet {
  id        String @id @default(cuid())
  roundId   String
  type      String
  amount    Int

  round     GameRound @relation(fields: [roundId], references: [id])
}

enum GameType {
  PACHINKO
  ROULETTE
  BLACKJACK
  CHOHAN
  TEXASHOLDEM
}

enum RoundStatus {
  BETTING
  SPINNING
  RESOLVED
}

enum ActionType {
  INQUIRY_START
  INQUIRY_SERVICE
  INQUIRY_END
  CASINO
  MASSAGE
  ACTIVITY
  LOAN
  EFFECT
}

enum ActionStatus {
  ACTIVE
  COMPLETED
}

enum BuffetType {
  Beverage
  Meal
}

enum EffectType{
  DRAGON_OF_DOJIMA
  LIFELINE_OF_KAMUROCHO
  DRAGON_OF_KANSAI
  SAFEKEEPER_OF_THE_TOJO_CLAN
  FIGHTING_VIPER
}